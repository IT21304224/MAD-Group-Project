<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="-30dp"
        app:srcCompat="@drawable/baseline_notifications_none_24" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:layout_marginTop="-57dp"
        app:srcCompat="@drawable/aa" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="63dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="400dp"
        app:srcCompat="@drawable/baseline_account_circle_24" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="82dp"
        android:layout_height="70dp"
        android:layout_marginTop="-140dp"
        app:srcCompat="@drawable/arrow" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="60dp"
        android:layout_height="41dp"
        android:layout_marginLeft="350dp"
        android:layout_marginTop="-60dp"
        app:srcCompat="@drawable/baseline_account_circle_24" />

    <TextView
        android:id="@+id/itemname"
        android:layout_width="134dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:text="1.Item Name"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/enterItem"
        android:layout_width="285dp"
        android:layout_height="86dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/price"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="Item Price"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/enterPrice"
        android:layout_width="287dp"
        android:layout_height="64dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="Item description"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/enterDescription"
        android:layout_width="302dp"
        android:layout_height="67dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/image"
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="Item Image"
        android:textSize="20sp" />

    <Button
        android:id="@+id/imageButton"
        android:layout_width="149dp"
        android:layout_height="59dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="#FFA500"
        android:text="Upload the Image" />


    <TextView
        android:id="@+id/addItemstopic"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="-600dp"
        android:text="Add Items"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="52dp"
        android:layout_height="44dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="-120dp"
        app:srcCompat="@drawable/baseline_notifications_none_24" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="187dp"
        android:layout_height="69dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="510dp"
        android:background="#F7F0E2"
        android:text="Save Details" />

</LinearLayout>